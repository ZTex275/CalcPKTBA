<Window x:Class="CalcPKTBA.History"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalcPKTBA"
        mc:Ignorable="d"
        Closing="History_Closing" 
        Title="История" Height="400" Width="300"
        MinHeight="400" MinWidth="300"
        WindowStartupLocation="Manual" Top="230" Left="1000">
    <Grid>
        <ScrollViewer>
            <TextBlock x:Name="historyBlock" TextAlignment="Right" FontSize="22px"/>
        </ScrollViewer>
        <Button Content="Очистить" Click="Button_Click_Clear" FontSize="22px" MinHeight="74px" MinWidth="100px" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
